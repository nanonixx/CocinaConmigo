<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userinfo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/userPic"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@drawable/ic_baseline_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/xex" />

        <TextView
            style="@style/textStyle"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:id="@+id/userfullname"
            app:layout_constraintLeft_toRightOf="@id/userPic"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/xex"/>


        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/userPic"
            app:layout_constraintTop_toBottomOf="@id/userfullname"
            android:text="@string/xex"/>

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:textColor="#1A8F88"
            app:layout_constraintLeft_toRightOf="@id/userPic"
            app:layout_constraintTop_toBottomOf="@id/username"
            android:text="@string/xex" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toRightOf="@id/userfullname"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/edit"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/editPhoto"
        android:background="@drawable/ic_button2"
        style="@style/rectangle"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userinfo"
        android:text="@string/xex"
        />

    <TextView
        android:id="@+id/gotoDrafts"
        android:background="@drawable/ic_button2"
        style="@style/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editPhoto"
        android:text="@string/xex"
        />

    <TextView
        android:id="@+id/title"
        style="@style/textStyle"
        android:text="@string/xex"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/gotoDrafts" />

    <TextView
        android:id="@+id/facebook"
        android:background="@drawable/ic_button2"
        style="@style/rectangle"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:text="@string/xex"
        />

    <TextView
        android:id="@+id/twitter"
        android:background="@drawable/ic_button2"
        style="@style/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/facebook"
        android:text="@string/xex"
        />

    <TextView
        android:id="@+id/instagram"
        android:background="@drawable/ic_button2"
        style="@style/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/twitter"
        android:text="@string/xex"
        />

</androidx.constraintlayout.widget.ConstraintLayout>